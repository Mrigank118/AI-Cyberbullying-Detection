{
    "manifest_version": 3,
    "name": "AI-Powered Cyberbullying Detection",
    "version": "1.0",
    "description": "Detect and report cyberbullying on LinkedIn",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "http://127.0.0.1:5000/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": ["content_script.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
